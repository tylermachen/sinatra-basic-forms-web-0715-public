<div class='container' style="padding-top: 20px;">
  <div class='row'>
    <div class='span8'>
      <div class="page-header">
        <h1>
          <%= @song.title %>
        </h1>
      </div>
        <table class='table table-striped'>
          <form action="/songs/<%= @song.id %>" method="post">
            <input type="hidden" name="_method" value="PATCH">
            <tr>
              <td><label for="title">Title</label></td>
              <td><input id="title" type="text" name="song[title]" value="<%= @song.title %>"></td>
            </tr>
            <tr>
              <td><label for="artist">Artist</label></td>
              <td><input id="artist" type="text" name="song[artist]" value="<%= @song.artist %>"></td>
            </tr>
            <tr>
              <td><label for="album">Album</label></td>
              <td><input id="album" type="text" name="song[album]" value="<%= @song.album %>"></td>
            </tr>
            <tr>
              <td><label for="genre">Genre</label></td>
              <td><input id="genre" type="text" name="song[genre]" value="<%= @song.genre %>"></td>
            </tr>
            <tr>
              <td><label for="length">Length</label></td>
              <td><input id="length" type="text" name="song[length]" value="<%= @song.length %>"></td>
            </tr>
            <td><input type="submit" value="Save Changes"></td>
          </form>
          </tr>
        </table>
        <a href="/songs/<%= @song.id %>">Cancel</a>
    </div>
  </div>
</div>
